{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center">
        {% for shop in shops %}
            <h1>{{ shop.shop }}</h1>
        {% endfor %}
    </div>

    <div class="container text-center">
        <div class="row">
            <div class="col">
                {{ form(form) }}
        </div>
<div class="col">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

        {% for shop in shops %}
            <ul class="list-group">
                <li class="list-group-item">
                    <input class="form-check-input me-1" type="checkbox" value="" aria-label="...">{{ shop.id }}
                    <a href="{{ path('show', {id: shop.id}) }}">
                        {{ shop.sort }}
                    </a>
                    <a class="text-danger" href="{{ path('delete', {id: shop.id}) }}">
                        Smazat
                    </a>
                </li>
            </ul>
        {% endfor %}

</div>

    </div>
    </div>
{% endblock %}