{% extends 'base.html.twig' %}

{% block body %}

    <h2>List of all posts</h2>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <table>
        <thead>
        <tr>
            <td>ID</td>
            <td>Title</td>
            <td>Actions</td>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
        <tr>
            <td>{{ post.id }}</td>
            <td>
                <a href="{{ path('show', {id: post.id}) }}">
                    {{ post.title }}
                </a>
            </td>
            <td>
                <a class="text-danger" href="{{ path('delete', {id: post.id}) }}">
                    Delete
                </a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

